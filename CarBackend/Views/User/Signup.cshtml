@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container my-5">
    <h2 class="text-center text-primary mb-4">Sign Up</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Display validation summary -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="mb-3">
                    <label for="customerName" class="form-label">Customer Name</label>
                    @Html.TextBox("customerName", null, new { @class = "form-control", id = "customerName" })
                    <span class="text-danger">@ViewData["err1"]</span>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    @Html.TextBox("username", null, new { @class = "form-control", id = "username" })
                    <span class="text-danger">@ViewData["err2"]</span>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    @Html.Password("password", null, new { @class = "form-control", id = "password" })
                    <span class="text-danger">@ViewData["err3"]</span>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    @Html.Password("confirmPassword", null, new { @class = "form-control", id = "confirmPassword" })
                    <span class="text-danger">@ViewData["err4"]</span>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    @Html.TextBox("address", null, new { @class = "form-control", id = "address" })
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    @Html.TextBox("email", null, new { @class = "form-control", id = "email" })
                    <span class="text-danger">@ViewData["err5"]</span>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    @Html.TextBox("phone", null, new { @class = "form-control", id = "phone" })
                    <span class="text-danger">@ViewData["err6"]</span>
                </div>

                <div class="mb-3">
                    <label for="birthday" class="form-label">Birthday</label>
                    <input type="date" name="birthday" class="form-control" id="birthday" />
                </div>
                 
                <!-- Submit Button -->
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Sign Up</button>
                </div>

                <!-- Information Message -->
                <div class="text-center mt-3">
                    <span class="text-info">@ViewData["info"]</span>
                </div>
            </div>
        </div>
    }
    <style>
        .container {
            max-width: 600px;
        }

        h2 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .form-label {
            font-weight: bold;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.25rem;
        }

        .d-grid {
            display: grid;
        }
    </style>
</div>

    

